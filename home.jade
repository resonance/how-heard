extends /layout.jade
block content

  div.columns
    div.tabs
      ul
        li
          a(href="/") Marketing Sources
        li
          a(href="/reporting") Reporting
    div.column
      h2 Marketing Sources
        if choices
          table.table.table-striped
            tbody
              each selection in choices.selections
                tr
                  td(data-choice="#{selection}") #{selection}
                  td
                    a(href="/delete?shop=#{shopName}&selection=#{selection}") Delete

    div.column
      form(action='/add' id="addselections" name='addselections', method="post")
        div
          label(for="selection") Enter your selections
          textarea(name="selection" rows="10", required)
          input(id="shopName" type="hidden" name='shopName' value="#{shopName}")
          button(type="submit" style="margin: 10px;") Add

script(src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js")