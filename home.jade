extends /layout.jade
block content

  .container
    .main
      .page-header
       h1 Marketing Sources
        .row
          .col-md-6
            if choices
              table.table.table-striped
                tbody
                  each selection in choices.selections
                    tr
                      td(data-choice="#{selection}") #{selection}
                      td
                        a(href='/') Delete
        .row
          form(action='/some/thing/add', method='post', style="display:none;")
	        input(id="selection" type="text")
            button(type="submit" style="margin: 10px;") Add

script(src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js")